<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CarteiraClientes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CarteiraClientes.styles.css" asp-append-version="true"/>
</head>
<body data-bs-theme="dark">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-light border border-primary border-2 rounded-2" asp-area="" asp-controller="Home" asp-action="Index">CarteiraClientes</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item dropdown">
                        <a class="text-white nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Empresas</a>
                        <div class="dropdown-menu border-info-subtle">
                            <a id="topCompaniesButton" class="dropdown-item" asp-area="" asp-controller="Companies" asp-action="Index">Listar Top Empresas</a>
                            <a id="pagedCompaniesButton" class="dropdown-item" asp-area="" asp-controller="Companies" asp-action="IndexPaged">Listar Empresas Paginando</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="" asp-controller="Companies" asp-action="Create">Adicionar Empresa</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="text-white nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Clientes</a>
                        <div class="dropdown-menu border-info-subtle">
                            <a id="topClientsButton" class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">Listar Top Clientes</a>
                            <a id="pagedClientsButton" class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="IndexPaged">Listar Clientes Paginando</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Create">Adicionar Cliente</a>
                        </div>
                    </li>
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Miscellaneous</button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                                <a id="relationshipButton" class="dropdown-item" asp-area="" asp-controller="ClientsCompanies" asp-action="Index">Relacionamento</a>
                                <a id="chartButton" class="dropdown-item" asp-area="" asp-controller="Charts" asp-action="Index">Gráfico</a>
                            </div>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@* Loading Spinner *@
<div class="d-flex justify-content-center h-100">
    <button id="loadingSpinner" class="btn btn-lg btn-light disabled" style="display: none">
        <span class="spinner-border spinner-border-lg"></span>
    </button>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - CarteiraClientes - <a href="https://github.com/JGMelon22/CarteiraClientes">Repositório</a>
    </div>
    <div class="container">

    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>