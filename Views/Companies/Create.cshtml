@model CarteiraClientes.ViewModels.Company.CompanyInputViewModel

<h3 class="text-success fst-normal">Adicionar uma nova Companhia</h3>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label">Nome Companhia</label>
                <input asp-for="CompanyName" type="text" class="border-light-subtle form-control w-50 p-1"/>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoundedDate" class="control-label">Data de Fundação</label>
                <input asp-for="FoundedDate" type="date" class="border-light-subtle form-control w-50 p-1"/>
                <span asp-validation-for="FoundedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Revenue" class="control-label">Lucro Anual</label>
                <input asp-for="Revenue" type="number" min="0" class="border-light-subtle form-control w-50 p-1"/>
                <span asp-validation-for="Revenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>
                    <h6></h6>
                    <input class="btn btn-success border-1 rounded-1 m-1" type="submit" value="Criar"/>
                    <a class="btn btn-secondary border-1 rounded-1 m-1" asp-action="Index">Retornar a Lista</a>
                </h4>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}